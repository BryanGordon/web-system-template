---
const currentPage = Astro.url.pathname
---

<nav>
  <ul>
    <li>
      <a href="/" class={currentPage === "/" ? "actualPage" : ""}>Users</a>
    </li>
    <li>
      <a href="/products" class={currentPage === "/products" ? "actualPage" : ""}>Products</a>
    </li>
  </ul>
</nav>

<style>
  nav {
    width: 100%;
    margin-top: 45px;
  }

  ul {
    padding: 0;
    display: flex;
    justify-content: center;
    gap: 70px;
    list-style: none;
  }

  li {
    font-size: 18px;
    cursor: pointer;
  }

  a {
    text-decoration: none;
    color: currentColor;
  }

  .actualPage {
    font-size: 19px;
    color: blueviolet;
  }
</style>